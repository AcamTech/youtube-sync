extends layout
block content
    #wrapper
        header
            h1 Welcome to #{room}
        #player
        #rightcolumn
            #chat
                ul#chatbox
                form#chatForm
                    input#msg(type='text',autocomplete="off")
            #users
                ul
            #drag
        #content
            #ctrls
                input#videoUrl(type='text', placeholder='video url')
                button(type='button')#addVideoBtn Add video
                button(type='button')#next Next
                button(type='button')#resync Resync
                button(type='button')#clear Clear
                button(type='button')#shuffle Shuffle
            #roomPlaylist
                ol#videos
            #info
                .numVideos
                .duration